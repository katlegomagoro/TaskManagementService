@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Routing
@using TaskManagementService.Shared

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    @if (!context.User.Identity?.IsAuthenticated ?? false)
                    {
                        <RedirectToLogin />
                    }
                    else
                    {
                        <p>You are not authorized to view this page.</p>
                    }
                </NotAuthorized>
                <Authorizing>
                    <MudProgressCircular Indeterminate="true" />
                </Authorizing>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <MudPaper Class="pa-4 text-center">
                    <MudText Typo="Typo.h4" Class="mb-4">Page Not Found</MudText>
                    <MudText Typo="Typo.body1" Class="mb-4">Sorry, there's nothing at this address.</MudText>
                    <MudButton Href="/" Color="Color.Primary">Go Home</MudButton>
                </MudPaper>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>

@code {
    private sealed class RedirectToLogin : ComponentBase
    {
        [Inject] private NavigationManager NavigationManager { get; set; } = default!;

        protected override void OnInitialized()
        {
            NavigationManager.NavigateTo("/", true);
        }
    }
}